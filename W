async function generateWalletsMarkup(userinfo, explorer, explorername) {
    let wallets = 'ðŸš« No wallets found.';
    let switchbutton = [];
    let refreshbutton = [{ text: 'ðŸ”„ Refresh', callback_data: 'switchtosell' }];
    let firstline = [], secondline = [], thirdline = [];

    for (let i = 0; i < userinfo.privatekeys.length; i++) {
        const address = getAddressFromPrivatekey(userinfo.privatekeys[i], userinfo.menuchain);
        const balance = await getBalance(address, userinfo.menuchain);

        wallets += `\nðŸ’³ ${i + 1} - Balance: ${stringTg(balance)} ${userinfo.coinsymbol} | [${explorername}](https://${explorer}/address/${address})\n\`${address}\`\n`;

        if (i === 0) {
            switchbutton.unshift({ text: `ðŸ§ Transfer ${userinfo.coinsymbol}`, callback_data: 'transfereth' });
        }

        const deleteButton = { text: `ðŸ—‘ Delete Wallet ${i + 1}`, callback_data: `isdeletewallet${i + 1}` };
        if (i <= 1) {
            firstline.push(deleteButton);
        } else if (i > 1 && i <= 3) {
            secondline.push(deleteButton);
        } else if (i > 2 && i <= 5) {
            thirdline.push(deleteButton);
        }
    }

    const inline_keyboard = [
        firstline, secondline, thirdline, [],
        [{ text: 'ðŸ“¥ Import New Wallet', callback_data: 'importwallet' }, { text: 'âž• Generate New Wallet', callback_data: 'generatewallet' }],
        [{ text: 'ðŸ”™ Back', callback_data: 'edittopanel' }]
    ];

    inline_keyboard.unshift(switchbutton, refreshbutton);

    return `ðŸ” *All added wallets:*\n\n${wallets}`;
}

async function editBuySettings(ctx, messageid) {
    try {
        let userId;
        if (ctx.chat.type === 'private') {
            userId = ctx.callbackQuery ? ctx.callbackQuery.from.id : ctx.message.from.id;
        } else {
            throw new Error('This command is only available in private chats.');
        }

        const userInfo = await getUserInfo(userId);

        const messageText = generateSettingsMessage(userInfo);

        const inlineKeyboard = generateSettingsKeyboard(userInfo);

        await bot.telegram.editMessageText(ctx.chat.id, messageid, null, messageText, {
            parse_mode: 'MarkdownV2',
            reply_markup: {
                inline_keyboard: inlineKeyboard
            },
            disable_web_page_preview: true
        });
    } catch (error) {
        console.log("Error:", error.message);
    }
}

async function editPanelSettings(ctx, messageid) {
    try {
        let id;
        if (ctx.chat.type === 'private') {
            id = { tgid: ctx.callbackQuery.from.id };
        } else {
            throw new Error('This command is only available in private chats.');
        }

        if (!await userinfoSchema.exists(id)) {
            await userinfoSchema.create(id);
        }

        const replyMarkup = {
            inline_keyboard: [
                [{ text: 'âš™ï¸ Tx Settings', callback_data: 'edittobuysettings' }],
                [{ text: 'ðŸ’¼ Manage Wallets', callback_data: 'edittomanagewallets' }]
            ]
        };

        const options = {
            parse_mode: 'MarkdownV2',
            reply_markup: replyMarkup,
            disable_web_page_preview: true
        };

        if (messageid) {
            await bot.telegram.editMessageText(ctx.chat.id, messageid, null, 'ðŸ–¥ï¸ *Your Settings:*', options);
        } else {
            await ctx.editMessageText('ðŸ–¥ï¸ *Your Settings:*', options);
        }
    } catch (error) {
        console.log("Error:", error.message);
    }
}

// Edit Menu Actions
